<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    tools:context=".MainActivityIntegration"
    android:id="@+id/niveau_view">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="0dp"/>

    <ImageView
        android:id="@+id/patern_image"
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|top"
        android:contentDescription="@string/app_name"
        android:src="@drawable/placeholder"/>

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/white"
        app:gaugePointStartColor="@color/white"
        app:gaugeStartAngle="-90"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/gray"
        app:gaugeStrokeWidth="7dp"
        app:gaugeSweepAngle="360"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="80dp" />

    <ImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="38dp"
        android:src="@drawable/close_foreground"
        android:id="@+id/take_picture"/>

</FrameLayout>
